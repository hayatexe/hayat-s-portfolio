# ================================
# CONTACT FORM CONFIGURATION
# ================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ================================
# EMAILJS CONFIGURATION
# ================================
# Sign up at https://www.emailjs.com/ to get these values
# 1. Create an account
# 2. Add an email service (Gmail, Outlook, etc.)
# 3. Create an email template
# 4. Get your Public Key from Account page

EMAILJS_PUBLIC_KEY=your_public_key_here
EMAILJS_SERVICE_ID=your_service_id_here
EMAILJS_TEMPLATE_ID=your_template_id_here

# Maximum attempts to wait for EmailJS to load
EMAILJS_MAX_INIT_ATTEMPTS=20

# Interval (in ms) between EmailJS load checks
EMAILJS_CHECK_INTERVAL=100

# ================================
# CONTACT INFORMATION
# ================================
# Your email address for fallback contact
CONTACT_EMAIL=your-email@example.com

# ================================
# FORM ELEMENT IDS
# ================================
# HTML element IDs (change these if your HTML uses different IDs)
FORM_ID=contactForm
FORM_STATUS_ID=formStatus
INPUT_NAME_ID=name
INPUT_EMAIL_ID=email
INPUT_SUBJECT_ID=subject
INPUT_MESSAGE_ID=message
INPUT_COPY_ID=copy

# ================================
# VALIDATION RULES
# ================================
# Minimum name length required
VALIDATION_MIN_NAME_LENGTH=2

# Minimum message length required
VALIDATION_MIN_MESSAGE_LENGTH=10

# Minimum time (in ms) user must spend on form (spam protection)
VALIDATION_MIN_FORM_TIME=3000

# ================================
# UI CONFIGURATION
# ================================
# How long (in ms) to display status messages
STATUS_DISPLAY_DURATION=10000

# Fade out duration (in ms) for status messages
STATUS_FADE_DURATION=300

# Number of confetti particles on success
CONFETTI_COUNT=50

# How long (in ms) confetti stays on screen
CONFETTI_DURATION=4000

# Delay (in ms) between each confetti particle
CONFETTI_STAGGER=30

# ================================
# AUTOSAVE CONFIGURATION
# ================================
# Delay (in ms) before auto-saving form data
AUTOSAVE_DEBOUNCE_TIME=1000

# LocalStorage key for saving form drafts
AUTOSAVE_KEY=contactFormDraft

# Delay (in ms) before clearing saved data after successful submit
AUTOSAVE_CLEAR_DELAY=2000

# ================================
# SPAM PROTECTION
# ================================
# Name of the honeypot field (hidden field to catch bots)
HONEYPOT_FIELD_NAME=website

# ================================
# CONFETTI COLORS
# ================================
# Comma-separated list of hex colors for confetti
CONFETTI_COLORS=#00d4ff,#0099ff,#ff0080,#00ff88,#ffaa00